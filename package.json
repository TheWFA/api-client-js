{
    "name": "@thewfa/api-client",
    "version": "0.3.3",
    "description": "Powerchair football API client",
    "license": "MIT",
    "author": "",
    "type": "module",
    "main": "./dist/main/index.cjs",
    "module": "./dist/module/index.mjs",
    "types": "./dist/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/module/index.mjs",
            "require": "./dist/main/index.cjs",
            "default": "./dist/module/index.mjs"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/TheWFA/api-client-js"
    },
    "bugs": {
        "url": "https://github.com/TheWFA/api-client-js/issues"
    },
    "homepage": "https://github.com/TheWFA/api-client-js#readme",
    "keywords": [
        "typescript",
        "api",
        "powerchair",
        "data",
        "sports",
        "football",
        "powersoccer",
        "soccer"
    ],
    "sideEffects": false,
    "engines": {
        "node": ">=18"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/main",
        "dist/module",
        "CHANGELOG.md",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build:esm": "esbuild src/index.ts --bundle --format=esm --outdir=dist/module --out-extension:.js=.mjs",
        "build:cjs": "esbuild src/index.ts --bundle --format=cjs --outdir=dist/main  --out-extension:.js=.cjs",
        "build:types": "tsc -p tsconfig.types.json",
        "build": "run-p build:*",
        "clean": "rimraf dist",
        "prepublishOnly": "npm run build",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "prepare": "husky",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/qs": "^6.14.0",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "dotenv": "^17.2.2",
        "esbuild": "^0.25.10",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.32.0",
        "husky": "^9.1.7",
        "jest": "^30.1.3",
        "lint-staged": "^16.1.6",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.1",
        "typescript": "^5.9.2"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "dependencies": {
        "qs": "^6.14.0"
    }
}

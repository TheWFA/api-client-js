{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2020",
        "outDir": "dist/main",
        "rootDir": "src",
        "module": "commonjs",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,

        "lib": ["ES2020", "DOM"],
        "types": ["node"],
        "typeRoots": ["node_modules/@types", "src/types"],

        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**"],
    "compileOnSave": false
}
